{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Width": 800,
        "Margin": "24, 24, 24, 24",
        "Orientation": "Vertical",
        "Items": [
            //driver line
            {
                "BlockType": "stack",
                "HorizontalAlignment": "Left",
                "VerticalAlignment": "Center",
                "Items": [
                    //flag
                    {
                        "BlockType": "image",
                        "Height": 64,
                        "MarginRight": 12,
                        "VerticalAlignment": "Center",
                        "ImageOptions": {
                            "Path": "{DriverInfo.Driver.Driver.Nationality.LogotypePath}",
                            "VerticalAlignment": "Center"
                        }
                    },

                    //name
                    {
                        "BlockType": "text",
                        "MarginLeft": 8,
                        "PaddingBottom": 6,
                        "Source": "{DriverInfo.Driver.Driver.Name}",
                        "HorizontalAlignment": "Left",
                        "VerticalAlignment": "Center",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 56
                    },

                    //icon badges
                    {
                        "BlockType": "itemstack",
                        "Spacing": 4,
                        "MarginLeft": 6,
                        "MarginTop": 4,
                        "ItemStackOptions": {
                            "ItemSource": "{DriverInfo.Driver.Driver.BadgeImages}",
                            "ItemTemplate": {
                                "BlockType": "image",
                                "Height": 24,
                                "Source": "{Item}"
                            }
                        }
                    },

                    //text badge
                    {
                        "BlockType": "text",
                        "MaxWidth": 400,
                        "MarginLeft": 8,
                        "MarginTop": 8,
                        "Source": "{DriverInfo.Driver.Driver.BadgeText}",
                        "HorizontalAlignment": "Left",
                        "VerticalAlignment": "Top",
                        "Foreground": "FFFFFF",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 16
                    }
                ]
            },
            {
                "BlockType": "stack",
                "Orientation": "Vertical",
                "Items": [
                    {
                        "BlockType": "text",
                        "FontName": "{FontNameBold}",
                        "Source": "Position",
                        "MarginTop": 16,
                        "FontSize": 56,
                    },
                    //position
                    {
                        "BlockType": "text",
                        "FontSize": 48,
                        "Source": "P{DriverInfo.Driver.PositionString}",
                        "Foreground": "FFFFFF",
                        "Triggers": [
                            {
                                "Condition": "{DriverInfo.Driver.IsRaceMajorClassified, Converter=StringEquals, Parameter=-}",
                                "Setters": [
                                    {
                                        "Property": "Source",
                                        "Value": "DNF"
                                    }
                                ]
                            }
                        ]
                    },
                    //Gap
                    {
                        "BlockType": "text",
                        "Source": "Personal Best",
                        "FontName": "{FontNameBold}",
                        "FontSize": 56,
                        "MarginTop": 16,
                    },
                    {
                        "BlockType": "text",
                        "FontSize": 48,
                        "Source": "{DriverInfo.Driver.FastestLapTime}",
                        "Foreground": "FFFFFF",
                    },

                    //stints
                    {
                        "BlockType": "text",
                        "Source": "Strategy",
                        "FontSize": 56,
                        "MarginTop": 16,
                        "PaddingBottom": 6,
                    },
                    {
                        "BlockType": "itemstack",
                        "Spacing": 4,
                        "VerticalAlignment": "Center",
                      "ItemStackOptions": {
                        "ItemSource": "{DriverInfo.Driver.Stints}",
                        "ItemTemplate": {
                          "BlockType": "stack",
                          "VerticalAlignment": "Center",
                          "MarginRight": 4,
                          "Spacing": 3,
                          "Items": [
                            {
                              "BlockType": "image",
                              "Height": 48,
                              "VerticalAlignment": "Center",
                              "Source": "tyres/tyres_{Item.Tyres}.png"
                            },
                            {
                              "BlockType": "text",
                              "Source": "{Item.Laps}",
                              "Foreground": "FFFFFF",
                              "HorizontalAlignment": "Center",
                              "VerticalAlignment": "Center",
                              "TextOptions": {
                                "FontName": "{FontNameDefault}",
                                "FontSize": 36,
                                "HorizontalAlignment": "Center"
                              }
                            }
                          ]
                        }
                      }
                    },
                    {
                        "BlockType": "text",
                        "FontSize": 56,
                        "Source": "Penalty Time",
                        "MarginTop": 16,
                        "PaddingBottom": 6
                    },
                    {
                        "BlockType": "text",
                        "Source": "+{DriverInfo.Driver.PenaltyTimeTotal}s",
                        "FontSize": 48,
                        "Foreground": "#FF0000",
                        "Triggers": [
                            {
                                "Condition": "{DriverInfo.Driver.PenaltyTimeTotal, Converter=NumberEquals, Parameter=0}",
                                "Property": "Foreground",
                                "Value": "#FFFFFF"
                            }
                        ]
                    },
                    {
                        "BlockType": "text",
                        "FontSize": 56,
                        "Source": "Overtakes",
                        "MarginTop": 16,
                        "PaddingBottom": 6,
                        "RenderIf": "{Session.SessionInfo.SessionType, Converter=StringEquals, Parameter=Race}"
                    },
                    {
                        "BlockType": "text",
                        "Source": "{DriverInfo.Driver.OvertakesCount}",
                        "FontSize": 48,
                        "Foreground": "#FFFFFF",
                        "RenderIf": "{Session.SessionInfo.SessionType, Converter=StringEquals, Parameter=Race}"
                    },
                ]
            }
        ]
    }
}
