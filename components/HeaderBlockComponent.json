{
    "ComponentName": "HeaderBlockComponent",
    "BlockType": "dock",
    "Orientation": "Horizontal",
    "Items": [
        //headerLeft
        {
            "Name": "headerLeftPart",
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Spacing": 12,
            "HorizontalAlignment": "Left",
            "Items": [
                //league name
                {
                    "BlockType": "stack",
                    "VerticalAlignment": "Top",
                    "Orientation": "Vertical",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Name": "txtLeagueName",
                            "Source": "{Season.LeagueInfo.LeagueName}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 20,
                            "MarginBottom": 5
                        },
                        {
                            "BlockType": "text",
                            "Source": "{Season.Name} ",
                            "VerticalAlignment": "Center",
                            "FontName": "{FontNameWide}",
                            "FontSize": 32,
                            "Foreground": "#FFFFFF"
                        }
                    ]
                },

                //main header
                {
                    "Name": "headerMainContent",
                    "BlockType": "stack",
                    "HorizontalAlignment": "Center",
                    "Spacing": 8,
                    "Items": [
                        // {
                        //     "BlockType": "image",
                        //     "Height": 36,
                        //     "Source": ""
                        // },

                        {
                            "BlockType": "text",
                            "VerticalAlignment": "Center",
                            "HorizontalAlignment": "Center",
                            "Source": "<subHeader> <header> after Round {Season.SeasonCurrentNumberEvent}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 42
                        }
                    ]
                }
            ]
        },

        //headerRight
        {
            "Name": "headerRightPart",
            "BlockType": "stack",
            "Orientation": "Vertical",
            "MarginLeft": 48,
            "HorizontalAlignment": "Right",
            "Items": [
                {
                    "BlockType": "stack",
                    "Items": [
                        {
                            "Name": "leagueLogo",
                            "BlockType": "image",
                            "Height": 100,
                            "MarginLeft": 36,
                            "Source": "{Season.LeagueInfo.LeagueLogo}"
                        }
                    ]
                }
            ]
        }
    ]
}
